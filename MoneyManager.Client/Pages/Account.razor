@page "/accounts/{id:guid}"

<PageTitle>Accounts</PageTitle>

<h3>Account</h3>

@if (account == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="align-middle table table-hover">
        <thead class="table-light">
        <tr>
            <th>Label</th>
            <th>Amount</th>
            <th>Date</th>
        </tr>
        </thead>
        <tbody>
        @foreach (TransactionSummary transaction in account.Transactions)
        {
            <tr>
                <td>@transaction.Label</td>
                <td>@transaction.Amount</td>
                <td>@transaction.Date.ToShortDateString()</td>
            </tr>
        }
        </tbody>
    </table>
}