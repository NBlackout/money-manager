@page "/accounts"
@using MoneyManager.Shared

<PageTitle>Accounts</PageTitle>

<h1>Accounts</h1>

<InputFile OnChange="UploadBankStatementFile"></InputFile>
@if (uploadResult != null)
{
    <div>@uploadResult</div>
}

@if (accounts == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Label</th>
            <th>Balance</th>
            <th>Tracking</th>
        </tr>
        </thead>
        <tbody>
        @foreach (AccountSummary? account in accounts)
        {
            <tr>
                <td>@account.Id</td>
                <td>@account.Label</td>
                <td>@account.Balance</td>
                <td>
                    @if (account.Tracked)
                    {
                        <button @onclick="() => StopTracking(account.Id)">Stop</button>
                    }
                    else
                    {
                        <button @onclick="() => ResumeTracking(account.Id)">Resume</button>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}