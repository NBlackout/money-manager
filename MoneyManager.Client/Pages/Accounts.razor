@page "/accounts"

<PageTitle>Accounts</PageTitle>

<h1>Accounts</h1>

<InputFile OnChange="UploadBankStatementFile"></InputFile>
@if (uploadResult != null)
{
    <div>@uploadResult</div>
}

@if (accounts == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="align-middle table table-hover">
        <thead class="table-light">
        <tr>
            <th></th>
            <th>Bank</th>
            <th>Label</th>
            <th>Balance</th>
            <th>Tracking</th>
        </tr>
        </thead>
        <tbody>
        @foreach (AccountSummaryPresentation? account in accounts)
        {
            <tr>
                <td>
                    @if (IsEditing(account) is false)
                    {
                        <button type="button" class="btn btn-link btn-sm" @onclick="@(() => ToggleEditMode(account))">
                            <i class="oi oi-pencil"></i>
                        </button>
                    }
                </td>
                <td>
                    @if (IsEditing(account))
                    {
                        <input type="text" value="@account.BankName" @ref="bankNameInput" @onchange="@BankNameChanged" @onabort="@ExitEditMode" class="form-control form-control-sm" placeholder="Bank name"/>
                    }
                    else
                    {
                        @account.BankName
                    }
                </td>
                <td>
                    @if (IsEditing(account))
                    {
                        <input type="text" value="@account.Label" @ref="labelInput" @onchange="@LabelChanged" @onabort="@ExitEditMode" class="form-control form-control-sm" placeholder="Label"/>
                    }
                    else
                    {
                        @account.Label
                    }
                </td>
                <td>@account.Balance</td>
                <td>
                    @if (account.Tracked)
                    {
                        <button type="button" class="btn btn-primary btn-sm" @onclick="@(() => StopTracking(account))">
                            <i class="oi oi-media-stop"></i>
                            Stop
                        </button>
                    }
                    else
                    {
                        <button type="button" class="btn btn-primary btn-sm" @onclick="@(() => ResumeTracking(account))">
                            <i class="oi oi-media-play"></i>
                            Resume
                        </button>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}