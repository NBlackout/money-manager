@using global::App.Read.Ports
@if (categories != null)
{
    <div class="list-group list-group-flush">
        @foreach (CategorySummaryPresentation category in categories.OrderBy(c => c.Label))
        {
            <button type="button" class="list-group-item list-group-item-action ps-2" @onclick="@(() => Pick(category.Id))">
                @category.Label
            </button>

            @foreach (ChildCategorySummaryPresentation child in category.Children.OrderBy(c => c.Label))
            {
                <button type="button" class="list-group-item list-group-item-action ps-4" @onclick="@(() => Pick(child.Id))">
                    @child.Label
                </button>
            }
        }
    </div>
}